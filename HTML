  display: flex;              /* daftar menu (ul) ditampilkan horizontal */
  list-style: none;           /* hilangkan bullet/angka bawaan list */
  gap: 20px;                  /* jarak antar item menu */
}

nav ul li a {
  color: white;               /* warna teks menu putih */
  text-decoration: none;      /* hilangkan garis bawah link */
