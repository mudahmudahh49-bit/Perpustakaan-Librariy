  font-size: 20px;            /* ukuran font untuk teks logo utama */
  font-weight: bold;          /* teks logo ditebalkan */
}

header .logo span {
  font-size: 14px;            /* ukuran font lebih kecil untuk span di logo */
  font-weight: normal;        /* teks span normal (tidak tebal) */
}

.logo {
  display: flex;              /* logo (gambar + teks) ditampilkan sejajar */
  align-items: center;        /* rata tengah vertikal antara gambar dan teks */
  gap: 8px;                   /* jarak antara gambar logo dengan teks */
  font-size: 20px;            /* ukuran font logo */
  font-weight: bold;          /* font logo ditebalkan */
  color: white;               /* warna teks logo putih */
}

